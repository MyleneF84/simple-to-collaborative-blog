<h1><%= @article.title %></h1>

<p><%= @article.content %></p>

<p><i><%= pluralize @article.contributions.count, "contribution" %></i></p>
<p>Posted <%= time_ago_in_words(@article.created_at) %> ago</p>

<%= link_to "Add a contribution", new_article_contribution_path(@article) %>

<div class="d-flex">
  <%= link_to "Edit", edit_article_path %> |
  <%= button_to "Delete", @article, method: :delete %>
  <%= link_to "Back", articles_path %>
</div>
<hr>

<div>
  <p>Comments : </p>
    <ul>
    <% @article.comments.each do |comment| %>
      <li>
      <%= comment.content %> - <%= comment.author.full_name %> - <%= link_to "ðŸ—‘", article_comment_path(@article, comment), data: {turbo_method: :delete}%>
      </li>
      <% end %>
    </ul>
</div>

<div>
  <%= render "comments/form", article: @article, comment: @comment %>
</div>
