<h1><%= @title_tags ? "Results for #{params[:tag]}" : "Trending articles" %></h1>

<div class="row justify-content-center">
  <div class="col-sm-8 my-3">
    <%= form_with url: articles_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :tag,
            params[:tag],
            class: "form-control",
            placeholder: "Type a keyword"
        %>
      <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<div class="row">
  <% @articles.each do |article| %>
    <div class="col-sm-3 mt-3">
      <div class="card h-100">
        <div class="card-body">
          <h5 class="card-title"><%= link_to article.title, polymorphic_path([namespace, article]) %> </h5>
          <p class="card-text">
            <% if article.authors.empty? %>
              <%= "Utilisateur desactivÃ©" %>
            <% else %>
              <%= article.names_list.map { |author| author.is_a?(Author) ? (link_to author.full_name, polymorphic_path([namespace, author])) : (author) }.join.html_safe %>
            <% end %>
          </p>
        </div>
        <div class="card-footer text-muted">
          <p>Posted <%= time_ago_in_words(article.created_at) %> ago</p>
          <p class="card-tags"> <%= article.tags.map(&:name).join(", ") %> </p>
        </div>
      </div>
    </div>
  <% end %>
</div>

